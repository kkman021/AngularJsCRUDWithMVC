@model CRUD_XML_MVC.Models.Billing
@{
    ViewBag.Title = "Create";
}
<h2>
    Create</h2>
<script type="text/javascript" src="@Url.Content("~/Scripts/Billing/Billing.js")"></script>
<script src="http://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.11.0.js" type="text/javascript"></script>
<link href="@Url.Content("~/content/datepicker.css")" rel="Stylesheet" />

<fieldset  ng-app="BillingApp" ng-controller="BillingCtrl">
    <legend>Billing</legend>
    <div class="editor-label">
        @Html.LabelFor(model => model.Customer)
    </div>
    <div class="editor-field">
        <input type="text" ng-model="ICustomer">
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.JobType)
    </div>
    <div class="editor-field">
        <select ng-model="IJobType" ng-options="Job.name for Job in JobTypes">
            <option value="">--請選擇--</option>
        </select>
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Date)
    </div>
    <div class="editor-field">
        <input type="text" class="form-control" datepicker-popup="{{format}}" ng-model="IDate" is-open="opened" datepicker-options="dateOptions" close-text="Close" ng-click="open($event)"/>        
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Description)
    </div>
    <div class="editor-field">
        <input type="text" ng-model="IDescription">
    </div>
    <div class="editor-label">
        @Html.LabelFor(model => model.Hours)
    </div>
    <div class="editor-field">
        <input type="number" ng-model="IHours">
    </div>
    <div>
        <button class="btn" ng-click="add()">Add</button>
    </div>
</fieldset>
